<div class="container-fluid container-xxl">
  <h1 class="text-center page-title">Log into TF Labs!</h1>

  <% if (typeof error !== 'undefined') { %>
    <div class="d-flex justify-content-center mb-5">
      <div class="alert error" role="alert"><%= error %></div>
    </div>
  <% } %>

  <% if (typeof successMessage !== 'undefined') { %>
    <div class="d-flex justify-content-center mb-5">
      <div class="alert success text-center" role="alert">
        <%= successMessage %>
      </div>
    </div>
  <% } %>

  <form action="/auth/login" method="post" class="d-flex flex-column align-items-center">
    <div class="form-group">
      <label for="username" class="form-label">Username</label>
      <input type="text" id="username" name="username" required="required" class="input auth-input">
    </div>

    <div class="form-group">
      <label for="password" class="form-label">Password</label>
      <input type="password" id="password" name="password" required="required" class="input auth-input">
    </div>

    <div class="text-center mt-4">
      <button type="submit" class="button primary large">Log In</button>
    </div>
  </form>

  <footer class="auth-footer mt-5 opacity-75 text-center">
    Don't have an account yet? <a href="/auth/register/">Create an Account</a>
  </footer>
</div>
