<div class="container-fluid container-xxl">
  <h1 class="page-title"><%= title %></h1>

  <div class="row">
    <div class="col-lg-3 d-none d-lg-block">
      <div class="sidebar right-sidebar">
        <div class="sidebar-block">
          <%- include('../_partials/accountSidebarMenu.ejs') %>
        </div>
      </div>
    </div>
    <div class="col-lg-9 d-flex flex-column gap-5">
      <form class="d-flex gap-2 flex-column medium-width-form" id="updateAccountInfoForm">
        <h4 class="small-section-title">Account Information</h4>

        <div class="form-group">
          <label for="email" class="form-label">Email</label>
          <input type="email" id="email" name="email" class="input full-width" value="<%= user.email %>" required>
        </div>

        <div class="form-group">
          <button class="button primary" id="saveAccountInfoButton" is="loader-button">
            <span class="loading-button-label">Save</span>
          </button>
        </div>
      </form>

      <form class="d-flex gap-2 flex-column medium-width-form" id="updateAccountPasswordForm" method="patch" action="/account/password/update">
        <h4 class="small-section-title">Update Password</h4>

        <div class="form-group">
          <label for="currentPassword" class="form-label">Current Password</label>
          <input type="password" id="currentPassword" name="currentPassword" class="input full-width" required>
        </div>

        <div class="form-group">
          <label for="newPassword" class="form-label">New Password</label>
          <input type="password" id="newPassword" name="newPassword" class="input full-width" required>
        </div>

        <div class="form-group">
          <label for="confirmNewPassword" class="form-label">Confirm New Password</label>
          <input type="password" id="confirmNewPassword" name="confirmNewPassword" class="input full-width" required>
        </div>

        <div class="form-group">
          <button class="button primary" id="savePasswordButton" is="loader-button">
            <span class="loading-button-label">Save</span>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
